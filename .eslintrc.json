{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "plugin:react/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "@typescript-eslint", "prettier"],
	"rules": {
		"react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
		"no-tabs": "off",
		"semi": "off",
		"indent": ["error", "tab"],
		"react/jsx-indent": [true, "tab"]
	}
}
